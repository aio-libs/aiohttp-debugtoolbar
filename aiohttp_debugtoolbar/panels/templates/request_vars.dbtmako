<h4>Cookie Variables</h4>
{% if cookies %}
<table class="table table-striped">
	<colgroup>
		<col style="width:20%"/>
		<col/>
	</colgroup>
	<thead>
		<tr>
			<th>Variable</th>
			<th>Value</th>
		</tr>
	</thead>
	<tbody>
		{% for key, value in cookies %}
		<tr class="{{ loop.index%2 and 'pDebugEven' or 'pDebugOdd' }}">
			<td>{{ key }}</td>
			<td>{{ value }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% else %}
<p>No cookie data</p>
{% endif %}

